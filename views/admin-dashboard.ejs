<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/adminstyle.css">
</head>
<body>
    <header>
        <h1>Welcome, Admin Kamlesh</h1>
        <nav>
        </nav>
    </header>
    <main>
        <h2>Admin Dashboard</h2>
        <p>This is where you can manage the application.</p>

        <h3>Customer Bookings</h3>
        <table border="1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Contact</th>
                    <th>Vehicle Name</th>
                    <th>Vehicle Number</th>
                    <th>Action</th> <!-- New column for delete button -->
                </tr>
            </thead>
            <tbody>
                <% bookings.forEach(booking => { %>
                    <tr>
                        <td><%= booking.name %></td>
                        <td><%= booking.address %></td>
                        <td><%= booking.contact %></td>
                        <td><%= booking.vehicleName %></td>
                        <td><%= booking.vehicleNumber %></td>
                        <td>
                            <!-- New delete button -->
                            <form action="/delete-booking/<%= booking._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

<!-- New Contact Messages Table -->
<h3>Contact Messages</h3>
<table border="1">
    <thead>
        <tr>
            <th>Email</th>
            <th>Phone</th>
            <th>Message</th>
            <th>Action</th> <!-- Column for delete button -->
        </tr>
    </thead>
    <tbody>
        <% contacts.forEach(contact => { %>
            <tr>
                <td><%= contact.email %></td>
                <td><%= contact.phone %></td>
                <td><%= contact.message %></td>
                <td>
                    <!-- Delete button -->
                    <form action="/delete-contact/<%= contact._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this message?');">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>


