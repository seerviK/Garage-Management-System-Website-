<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/homestyle.css">
</head>

<body>
    <header>
        <h1>Welcome to GaragePro</h1>
    </header>

    <main>
        <section class="services">
            <div class="services-container">
                <!-- Book a Service Card -->
                <div class="card">
                    <h2>Book a Service</h2>
                    <p>Schedule a service for your vehicle</p>
                    <button id="bookServiceBtn">Book Now</button>

                    <!-- Hidden form for booking service -->
                    <div class="service-form" id="serviceForm">
                        <form action="/book-service" method="post">
                            <label for="name">Name:</label>
                            <input type="text" id="name" name="name" required><br>

                            <label for="address">Address:</label>
                            <input type="text" id="address" name="address" required><br>

                            <label for="contact">Contact:</label>
                            <input type="text" id="contact" name="contact" required><br>

                            <label for="vehicleName">Vehicle Name:</label>
                            <input type="text" id="vehicleName" name="vehicleName" required><br>

                            <label for="vehicleNumber">Vehicle Number:</label>
                            <input type="text" id="vehicleNumber" name="vehicleNumber" required><br>

                            <button type="submit">Submit</button>
                        </form>
                    </div>
                </div>

                <!-- Buy Accessories Card -->
                <div class="card">
                    <h2>Buy Accessories</h2>
                    <p>Explore a range of vehicle accessories</p>
                    <a href="/accessories"><button>Shop Now</button></a>
                </div>

                <!-- Hire a Team Card -->
                <div class="card">
                    <h2>Hire a Team</h2>
                    <p>Hire a team of experts</p>
                    <button id="hireNowBtn" onclick="window.location.href='/teams';">Hire Now</button>
                </div>

                <!-- About Us Card -->
                <div class="card">
                    <h2>About Us</h2>
                    <p>Learn more about GaragePro</p>
                    <button id="aboutUsBtn">About Us</button>

                    <!-- Hidden info for About Us -->
                    <div class="about-info" id="aboutInfo">
                        <p>GaragePro is dedicated to providing top-notch vehicle services.</p>
                    </div>
                </div>

                <!-- Contact Us Card -->
                 <div class="card">
                    <h2>Contact Us</h2>
                    <p>Get in touch with us</p>
                    <button id="contactUsBtn">Contact Us</button>

                    <!-- Hidden contact info -->
                    <div class="contact-info" id="contactInfo">
                        <form action="/submit-contact" method="POST">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" placeholder="Your Email" required><br>
                            <label for="phone">Phone:</label>
                            <input type="text" id="phone" name="phone" placeholder="Your Phone Number" required><br>
                            <label for="message">Type Your Message:</label>
                            <textarea id="message" name="message" rows="4" placeholder="Your Message" required></textarea><br>
                            <button type="submit">Submit</button>
                        </form>
                    </div>

                    <!-- Display success/failure message -->
                    <% if (typeof message !== 'undefined') { %>
                        <p><%= message %></p>
                    <% } %>
                </div>

                <!-- Our Journey Card -->
                <div class="card">
                    <h2>Our Journey</h2>
                    <p>Discover our story</p>
                    <a href="/journey"><button>Explore</button></a>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <p>Â© 2024 GaragePro. All Rights Reserved.</p>
    </footer>

    <script>
        document.getElementById("bookServiceBtn").addEventListener("click", function () {
            document.getElementById("serviceForm").classList.toggle("show-form");
        });

        document.getElementById("aboutUsBtn").addEventListener("click", function () {
            document.getElementById("aboutInfo").classList.toggle("show-form");
        });

         document.getElementById("contactUsBtn").addEventListener("click", function () {
            document.getElementById("contactInfo").classList.toggle("show-form");
        });
    </script>
</body>
</html>
